$define SYS_EXIT 60
$define SYS_WRITE 1
$define STDOUT 1

$global _start;

$section text {
    label _start {
        _random_function() /* call the function */
        move rdi <- STDOUT;
        move rsi <- message;
        move rdx <- message_length; /* length of the message */
        syscall;
        move rax <- SYS_EXIT;
        move rdi <- 0;
        syscall;
    }

    label _random_function
    {
        $pstk /* prepare stack */
        move rax <- SYS_WRITE;
        $fstk /* restore stack */
    }
}

$section data {
    label message {
        db 'Hello, World!', 0; /* null-terminated string
    }
    label message_length {
        equ $ - message; /* length of the message */
    }
}